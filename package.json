{
  "name": "shorting-urls",
  "version": "1.0.0",
  "type": "module",
  "description": "URL shortening service with clean architecture",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\" && npm run lint:fix",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\" && npm run lint",
    "type-check": "tsc --noEmit",
    "check-all": "npm run type-check && npm run format:check && npm run test:run",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "url-shortener",
    "express",
    "typescript",
    "prisma"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "nanoid": "^5.0.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.12.0",
    "@faker-js/faker": "^9.0.3",
    "@types/cors": "^2.8.17",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/express": "^4.17.21",
    "@types/node": "^20.9.0",
    "@types/validator": "^13.11.7",
    "@vitest/coverage-v8": "^2.1.2",
    "@vitest/ui": "^2.1.2",
    "eslint": "^9.12.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "prettier": "^3.3.3",
    "prisma": "^5.6.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.2.2",
    "typescript-eslint": "^8.8.0",
    "vitest": "^2.1.2",
    "vitest-mock-extended": "^2.0.2"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
